@model KhachSan.Models.DB.tbl_customer

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/ViewContent/img/favicon.png">

    <!-- Font Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <link rel="stylesheet" href="~/Content/LoginContent/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Content/LoginContent/css/style.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>
<body>
    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
                <div class="signin-image">
                    <figure><img src="~/Content/LoginContent/images/signin-image.jpg" alt="sign up image"></figure>
                </div>

                <div class="signin-form">
                    <h2 class="form-title">Đăng Ký</h2>
                    @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label for="cusname"><i class="zmdi zmdi-account"></i></label>
                            @Html.TextBoxFor(x => x.cusname, new { id = "cusname", placeholder = "Họ và tên" })
                            @Html.ValidationMessageFor(x => x.cusname, "", new { @class = "text-danger" })
                        </div>
                        <span style="color:red">@ViewBag.ThongBaoEmail</span>
                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email"></i></label>
                            @Html.TextBoxFor(x => x.emailcus, new { @type = "email", id = "email", placeholder = "Email" })
                            @Html.ValidationMessageFor(x => x.emailcus, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.PasswordFor(x => x.cus_password, new { id = "your_pass", placeholder = "Mật Khẩu" })
                            @Html.ValidationMessageFor(x => x.cus_password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label for="rePass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.Password("rePass", null, new { id = "rePass", placeholder = "Nhập lại mật khẩu" })
                        </div>

                        <span style="color:red">@ViewBag.ThongBao</span>

                        <div class="form-group form-button">
                            <input type="submit" id="btnAlertMessage" class="form-submit" value="Đăng Ký" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>
</html>
